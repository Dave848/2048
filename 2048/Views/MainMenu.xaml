<UserControl x:Class="_2048.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2048.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 30">
            <TextBlock Text="Game 2048" FontSize="60" FontWeight="Bold" HorizontalAlignment="Center" Margin="0, 0, 0, 40"/>
            <Button Content="Start Game" Width="200" Height="50" Command="{Binding NavigateGameCommand}"/>
            <Separator Height="20" Opacity="0"/>
            <Button Content="Scoreboard" Width="200" Height="50" Command="{Binding NavigateScoreboardCommand}"/>
            <Separator Height="20" Opacity="0"/>
            <Button Content="Achievements" Width="200" Height="50" Command="{Binding NavigateAchievementsCommand}"/>
            <Separator Height="20" Opacity="0"/>
            <Button Content="About" Width="200" Height="50" Command="{Binding NavigateAboutCommand}"/>
            <Separator Height="20" Opacity="0"/>
            <Button Content="Exit" Width="200" Height="50" Command="{Binding ExitCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
