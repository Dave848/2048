<UserControl x:Class="_2048.Views.AchievementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2048.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <local:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="400px"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Achievements" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,30,0,0"/>
        <Grid Grid.Row="1" Margin="30, 30, 30, 0 ">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Achievements scroll viewer -->
            <Border
                Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="0, 0, 20, 0"
                CornerRadius="4">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Achievements}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border 
                                    Margin="5"
                                    Padding="10"
                                    CornerRadius="5"
                                    BorderBrush="Gray"
                                    BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Image 
                                            Grid.Column="0"
                                            Source="{Binding IconPath}"
                                            Width="80" Height="80"
                                            VerticalAlignment="Center"
                                            Opacity="{Binding IsCompleted, Converter={StaticResource BoolToOpacityConverter}}">
                                            <Image.Clip>
                                                <RectangleGeometry Rect="0,0,80,80" RadiusX="5" RadiusY="5"/>
                                            </Image.Clip>
                                        </Image>
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock 
                                                    Text="{Binding Name}"
                                                    FontWeight="Bold"
                                                    FontSize="16"/>

                                            <TextBlock 
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap"
                                                FontSize="13"
                                                Margin="0,4,0,0"
                                                Foreground="DarkGray"/>

                                            <TextBlock 
                                                    Text="{Binding CompletedAt}"
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            
            <!-- Options panel -->
            <StackPanel Grid.Column="1" Margin="0,0,0,0" Height="370" VerticalAlignment="Top">
                <CheckBox    Margin="0,10" Content="Hide completed"          FontSize="14" IsChecked="{Binding HideCompleted}" />
                <CheckBox    Margin="0,10" Content="Hide uncompleted"        FontSize="14" IsChecked="{Binding HideUncompleted}" />
                <RadioButton Margin="0,10" Content="Sort alphabetically"     FontSize="14" IsChecked="{Binding SortAlphabetically}"/>
                <RadioButton Margin="0,10" Content="Sort by achieved date"   FontSize="14" IsChecked="{Binding SortByDate}" />
                <Button      Margin="0,180,0,0" Content="Reset Achievements" FontSize="14" Command  ="{Binding ResetAchievementsCommand}" Width="150px" Padding="10px"/>
            </StackPanel>
        </Grid>
        <Button Grid.Row="2" Content="Back to Menu" Width="150" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,30,0,30" Command="{Binding NavigateMainMenuCommand}"/>
    </Grid>
</UserControl>
